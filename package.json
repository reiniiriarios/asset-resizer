{
  "name": "asset-resizer",
  "displayName": "Asset Resizer",
  "description": "Resize assets as part of build workflow.",
  "version": "0.0.1",
  "main": "dist/main.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "bin": {
